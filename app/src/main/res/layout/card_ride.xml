    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">




        <android.support.v7.widget.CardView
            android:layout_marginTop="16dp"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/ride_stime"
                            android:text="TIME"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_weight="0.3"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/ride_src"
                            android:text="Ernkulam"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:textColor="@android:color/black"
                            android:layout_weight="0.7"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/ride_date"
                            android:text="10-7-1994"

                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_weight="0.3"
                            android:layout_height="match_parent" />



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/ride_time"
                            android:text="08:20"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/ride_des"
                            android:text="Palakkad"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:textColor="@android:color/black"
                            android:layout_weight="0.67"
                            android:layout_height="match_parent" />




                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_width="0dp"
                            android:id="@+id/r_image"
                            android:layout_weight="0.2"
                            android:src="@drawable/user"
                            android:layout_marginLeft="0dp"
                            android:layout_height="match_parent" />


                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/rider_name"
                            android:text="BINIL S"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:textColor="@android:color/black"
                            android:layout_weight="0.80"
                            android:layout_height="match_parent" />

                        <Button
                            android:layout_width="wrap_content"
                            android:text="DIRECTION"
                            android:textColor="@android:color/white"
                            android:background="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_map"
                            android:layout_weight="0.1"

                            />


                    </LinearLayout>






                </LinearLayout>


            </LinearLayout>


